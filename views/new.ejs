<%- layout("/layouts/boilerplate") %>
<body>
    
    <div class="row mt-3">
        <div class="col-6 offset-2">
    <h3> Enter New Listing</h3><br>
    <form method="POST" 
     action="/listings"enctype="multipart/form-data"
     class="needs-validation" novalidate>
     <label for="main" class="form-label">Title:&emsp;&emsp;&emsp;</label>
     <input class="form-control" id="main" type="text" placeholder="Enter title" name="listing[title]"required>
     <div class="invalid-feedback">Please provide a title.</div>
     <br><br>

        <label for="desc" class="form-label">Description:</label>
        <textarea id="desc" class="form-control" name="listing[description]" placeholder="Enter Here..."required></textarea>
        <div class="invalid-feedback">Please enter description.</div>
        <br><br>

        <label for="img" class="form-label">Upload Image:&emsp;&emsp;</label>
        <input type="file" id="img" class="form-control" name="listing[image]" required>
        <div class="invalid-feedback">Kindly upload an image.</div>
        <br><br>

        <div class="row"> 
            <div class="col-md-4">
          <label for="price" class="form-label">Price: &emsp;  &emsp;</label>
          <input id="price"type="number" class="form-control" placeholder="Enter price" name="listing[price]" required>
          <div class="invalid-feedback">Enter Price.</div><br><br>
        </div>
         
        <div class="col">
          <label for="location" class="form-label">Location:&emsp;</label>
          <input  id="location" type="text"class="form-control" placeholder="Enter location" name="listing[location]" required>
          <div class="invalid-feedback">Enter a valid Location.</div><br><br>
      </div>
        </div>
        
        <label for="nation" class="form-label">Country:&emsp;</label>
        <input id="nation" type="text" class="form-control" placeholder="Enter Country name" name="listing[country]" required>
        <div class="invalid-feedback">Enter a valid Country.</div><br><br>

        <button class="btn  btn-dark add-btn ">Add</button>
    </form>
</div>
</div>

</body>

