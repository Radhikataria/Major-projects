<%- layout('/layouts/boilerplate') %>
<body>
  <div class="row mt-3">
      <div class="col-6 offset-2">
        <h1>SignUp on Wanderlust</h1><br>
         <form method="POST" action="/signup" class="needs-validation" novalidate>
             <div class="mb-3">
                 <label for="username" class="form-label">Username:&emsp;</label>
                 <input id="username" type="text" class="form-control" 
                 placeholder="Enter username"
                 name="username" required>
                 <div class="invalid-feedback">Enter a Username</div>
              </div>
             
              <div class="mb-3">
                <label for="email" class="form-label">Email:&emsp;</label>
                <input id="email" type="text" class="form-control" 
                placeholder="Enter Email"
                name="email" required>
                <div class="invalid-feedback">Enter an Email</div>
             </div>
            

            <div class="mb-3">
                <label for="password" class="form-label">Password:&emsp;</label>
                <input id="password" type="password" class="form-control" 
                placeholder="Enter password"
                name="password" required>
                <div class="invalid-feedback">Enter a Password</div>
             </div>
            
            <button class="btn btn-success">SignUp</button>
          </form>
      </div>
   </div>
</body>
