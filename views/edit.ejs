<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div class="col-6 offset-2"><br>
    <h3> Edit your form</h3>
    <form method="POST" action="/listings/<%= data.id %>?_method=PUT"
        enctype="multipart/form-data" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label"> Title :</label>
            <input id="title" class="form-control" type="text"
             value="<%=data.title %>" name="listing[title]"required>
             <div class="valid-feedback">Looks Good!</div>
             <div class="invalid-feedback">Enter Title Here..</div>
         </div>

         <div class="mb-3">
            <label for="desc" class="form-label">Description:</label>
            <textarea name="listing[description]" value="<%=data.description %>" 
                class="form-control" required><%=data.description%></textarea>
                <div class="invalid-feedback">Enter Desciption Here..</div>
         </div>
         Original Image:
         <div class="mb-3">

            <img src="<%=originalImageUrl %>">
           
         </div>
         
         <div class="mb-3">
            <label for="image" class="form-label">Upload New Image:</label>
            <input id="image" class="form-control" type="file"
             name="listing[image]">
           
         </div>

         <div class="row mb-3">
            <div class="col-md-4">
              <label for="price" class="form-label">Price:</label>
              <input id="price" type="number" class="form-control" value="<%=data.price%>" name="listing[price]"required>
              <div class="invalid-feedback">Enter valid price value.</div>
            </div>
             

             <div class="col">
                 <label for="location" class="form-label">Location:</label>
                 <input id="location" type="text" class="form-control" value="<%=data.location%>" name="listing[location]" required>
                 <div class="invalid-feedback">Enter Location Here..</div>
             </div>
         </div>

         <div class="mb-3">
            <label for="country" class="form-label">Country:</label>
            <input type="text" value="<%=data.country%>" name="listing[country]" class="form-control"required>
            <div class="invalid-feedback">Enter valid Country name.</div>
         </div>

        <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
    </form>
    </div>
    </div>
</body> 
